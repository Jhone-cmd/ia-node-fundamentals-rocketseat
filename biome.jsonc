{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/core"],
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "single"
    }
  },

  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "off",
        "useAwait": "off",
        "noExplicitAny": "off"
      },
      "nursery": {
        "noShadow": "off"
      }
    }
  }
}
